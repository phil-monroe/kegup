
.container
  .row
    .col-lg-9
      %h1
        = @org.name


  .row
    .col-lg-9
      .row
        .col-lg-12
          = render 'on_tap'

      .row
        .col-lg-12
          %hr

      .row
        .col-lg-12
          %ul.nav.nav-tabs{style: "margin-bottom: 15px;"}
            %li.active
              %a{"data-toggle" => "tab", href: "#keg-backlog"} Keg Backlog
            %li
              %a{"data-toggle" => "tab", href: "#previous-kegs"} Previous Kegs
            %li
              %a{"data-toggle" => "tab", href: "#available-beers"} Beer Available

          #myTabContent.tab-content.container

            #keg-backlog.tab-pane.active
              = render 'kegs_list', org: @org, kegs: @org.kegs.backlogged, tappable: true

            #previous-kegs.tab-pane
              = render 'kegs_list', org: @org,  kegs: @org.kegs.finished, tappable: false

            #available-beers.tab-pane
              = render 'beer_list', org: @org




    .col-lg-3
      = render 'members'
