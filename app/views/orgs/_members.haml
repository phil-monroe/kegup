.kegmeisters.row
  .col-lg-12
    %h3
      Kegmeisters
      .pull-right
        - if @org.users.include?(current_user) && @org.has_empty_taps?
          #bother-kegmeisters.btn.btn-warning.btn-sm{'data-org-id' => @org.id, 'data-user-id' => current_user.try(:id)}
            Bother

    %hr
    %ul.member-list
      - @org.kegmeisters.each do |user|
        %li
          = user.name

.org-members.row
  .col-lg-12
    %h3
      Members
      - if current_user
        .pull-right
          - if !current_user.orgs.include?(@org)
            = form_for OrgUserMembership.new(org_id: @org.id, user_id: current_user.id) do |f|
              = f.hidden_field :org_id
              = f.hidden_field :user_id
              = f.submit "Join org", class: "btn btn-info btn-sm"
          - elsif !current_user.kegmeister_for(@org)
            = link_to 'Leave Org', current_user.org_user_memberships.where(org: @org).first, data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger btn-sm"


    %hr
    %ul.member-list
      - @org.users.each do |user|
        %li
          = user.name